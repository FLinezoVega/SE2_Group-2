<Page x:Class="ScholarStationGUI.ListingSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Width="1200" Height="900"
      Title="ListingSearch">
    <Page.Resources>
        <DataTemplate x:Key="ListingViewDataTemplate">
            <Grid Width="300" Background="#FF5D5AA0" Height="102">
                <StackPanel Margin="10,22,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Author:" VerticalAlignment="Top"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding Author}" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="10,76,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Heading:" VerticalAlignment="Top"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding Heading}" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Margin="10,4,0,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Body:" VerticalAlignment="Top"/>
                    <TextBlock VerticalAlignment="Top" TextWrapping="NoWrap" Text="{Binding Body}" Margin="5,0,0,0"/>
                </StackPanel>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ListView x:Name="ListingView" Margin="250, 50, 30, 0" ItemTemplate="{StaticResource ListingViewDataTemplate}"/>
        <StackPanel Margin="20, 50, 30, 30" Width="200" HorizontalAlignment="Left">
            <StackPanel HorizontalAlignment="Left" Height="880" Margin="5,10,0,10" VerticalAlignment="Top" Width="235">
                <Label Content="University" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="UniversityBox" FontSize="35" Height="46" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5"/>
                <Label Content="Subject" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="SubjectBox" Height="46" FontSize="35" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5"/>
                <Label Content="Type" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="TypeBox" Height="46" FontSize="35" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
