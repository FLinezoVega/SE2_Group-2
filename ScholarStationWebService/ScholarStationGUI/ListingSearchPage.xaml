<Page x:Class="ScholarStationGUI.ListingSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Loaded="Page_Loaded"
      Width="1200" Height="900"
      Title="ListingSearch">
    <Page.Resources>
        <DataTemplate x:Key="ListingViewDataTemplate">
            <Canvas HorizontalAlignment="Left" Height="103.238" Margin="20,5,0,0" VerticalAlignment="Top" Width="750">
                <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Author:" Canvas.Top="10"/>
                <TextBlock Canvas.Left="63.057" TextWrapping="Wrap" Text="{Binding Author}" Canvas.Top="10"/>
                <TextBlock Canvas.Left="422.791" TextWrapping="Wrap" Text="University:" Canvas.Top="10"/>
                <TextBlock Canvas.Left="488.385" TextWrapping="Wrap" Text="{Binding University}" Canvas.Top="10"/>
                <TextBlock Canvas.Left="63.057" TextWrapping="Wrap" Text="{Binding Heading}" Canvas.Top="30.96" Width="383.615"/>
                <TextBlock Canvas.Left="71.304" TextWrapping="Wrap" Text="{Binding Body}" Canvas.Top="73.947" Width="606.727" Height="29.291"/>
            </Canvas>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FF659E89">
        <ListView x:Name="ListingView" Margin="400, 50, 30, 0" ItemTemplate="{StaticResource ListingViewDataTemplate}"/>
        <StackPanel Margin="20, 50, 30, 30" Width="200" HorizontalAlignment="Left">
            <StackPanel HorizontalAlignment="Left" Height="880" Margin="5,10,0,10" VerticalAlignment="Top" Width="235">
                <Label Content="University" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="UniversityBox" FontSize="27" Height="50" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5" Width="180" HorizontalAlignment="Left"/>
                <Label Content="Subject" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="SubjectBox" Height="50" FontSize="27" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5" Width="180" HorizontalAlignment="Left"/>
                <Label Content="Type" Height="58" Margin="10,5,10,0" FontSize="40"/>
                <ComboBox x:Name="TypeBox" Height="50" FontSize="27" Margin="5,0,0,0" RenderTransformOrigin="0.5,0.5" Width="180" HorizontalAlignment="Left"/>
                <Button Content="Search" Margin="0, 150, 0, 0" Height="60" FontSize="22" Click="SearchButtonClick" Width="200" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
