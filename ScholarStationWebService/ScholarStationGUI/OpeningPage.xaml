<Page x:Name="Opening" x:Class="ScholarStationGUI.OpeningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="OpeningPage" Width="1200" Height="900">

    <Grid x:Name="___Grid_">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="White" Offset="0.435"/>
                <GradientStop Color="#FF63A88F" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="415,647,0,0" VerticalAlignment="Top" Width="333" Click="SignInButtonClick" Height="84" FontSize="40"/>
        <Button Content="Sign Up" HorizontalAlignment="Left" Margin="415,759,0,0" VerticalAlignment="Top" Width="333" Click="SignUpButtonClick" Height="84" FontSize="40"/>
        <Image Margin="311,227,343,288" Source="sstationlogo.png" Stretch="Fill"/>
        <Label Content="Scholar Station" HorizontalAlignment="Center" Margin="393,557,425,0" VerticalAlignment="Top" Width="382" Height="77" FontSize="48" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontStyle="Italic"/>
    </Grid>
</Page>
